{% layout none %}
{ 
    "title": "{{ collection.title }}", 
    "products": [
        {% for product in collection.products %}
            {
                "id": {{ product.id }},
                "tags": [
                    {% for tag in product.tags %}
                    "{{ tag }}"
                    {% unless forloop.last %},{% endunless %}
                    {% endfor %}
                ],
                "variants": [
                    {% for variant in product.variants %}
                    {
                        "id": {{ variant.id }},    
                        "title": "{{ variant.title }}"
                    }
                    {% unless forloop.last %},{% endunless %}
                    {% endfor %}
                ]
            }
            {% unless forloop.last %},{% endunless %}
        {% endfor %}
    ]
}
