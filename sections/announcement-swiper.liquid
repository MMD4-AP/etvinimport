{{ 'component-announcement-swiper.css' | asset_url | stylesheet_tag }}
<script src="{{ 'announcement-swiper.js' | asset_url }}" defer="defer"></script>

<div id="{{ section.id }}">
    <div class="swiper announcement-swiper">
        <div class="swiper-wrapper">
        {%- for block in section.blocks -%}
            <div class="swiper-slide">
                <img src="{{ block.announcement_icon | image_url }}" alt="{{ block.announcement_icon.alt }}" /> <p>{{ block.announcement_text }}</p>
            </div>
        {%- endfor -%}
        </div>
        <div class="swiper-button-next">
            <svg xmlns="http://www.w3.org/2000/svg" width="15" height="27" fill="none" viewBox="0 0 15 27">
                <path fill="#6B705C" d="m.316 1.942 11.267 11.557L.316 25.057a1.105 1.105 0 0 0 0 1.545 1.053 1.053 0 0 0 1.503 0l11.988-12.295a1.156 1.156 0 0 0 0-1.614L1.821.397a1.052 1.052 0 0 0-1.507 0 1.105 1.105 0 0 0 0 1.545h.002Z"/>
            </svg>
        </div>
        <div class="swiper-button-prev">
            <svg xmlns="http://www.w3.org/2000/svg" width="15" height="27" fill="none" viewBox="0 0 15 27">
                <path fill="#6B705C" d="m.316 1.942 11.267 11.557L.316 25.057a1.105 1.105 0 0 0 0 1.545 1.053 1.053 0 0 0 1.503 0l11.988-12.295a1.156 1.156 0 0 0 0-1.614L1.821.397a1.052 1.052 0 0 0-1.507 0 1.105 1.105 0 0 0 0 1.545h.002Z"/>
            </svg>
        </div>
        <div class="swiper-pagination"></div>
      </div>
</div>


